<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f8f9fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Иван Сидоров"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tvBrigade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Бригада №1"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Выйти"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Статистика бригады -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="СТАТИСТИКА БРИГАДЫ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvWorkersCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Работников: 8"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvTotalCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выполнено: 845 шт"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTotalDefects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Брак: 12 шт"
                    android:textSize="14sp"
                    android:textColor="#F44336" />

                <TextView
                    android:id="@+id/tvDefectsPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(1.4%)"
                    android:textSize="12sp"
                    android:textColor="#F44336"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Топ работников -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ТОП РАБОТНИКОВ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvWorker1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Анна Петрова - 127 шт"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvWorker2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Иван Сидоров - 98 шт"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvWorker3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Мария Козлова - 156 шт"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Быстрые действия -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="УПРАВЛЕНИЕ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnAssignTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="НАЗНАЧИТЬ ЗАДАНИЯ"
                android:textSize="14sp"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnQualityControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="КОНТРОЛЬ КАЧЕСТВА"
                android:textSize="14sp"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnBrigadeReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ОТЧЕТ БРИГАДЫ"
                android:textSize="14sp"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>