<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#f8f9fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Заголовок -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ВОССТАНОВЛЕНИЕ ПАРОЛЯ"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:padding="16dp" />

        <!-- Шаг 1: Ввод email -->
        <LinearLayout
            android:id="@+id/step1Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvStep1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Введите ваш email для восстановления пароля"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Ваш email"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background"
                android:padding="16dp" />

        </LinearLayout>

        <!-- Шаг 2: Новый пароль -->
        <LinearLayout
            android:id="@+id/step2Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="24dp"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvStep2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Установите новый пароль"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Новый пароль"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edit_text_background"
                android:padding="16dp" />

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Подтвердите пароль"
                android:background="@drawable/edit_text_background"
                android:padding="16dp" />

        </LinearLayout>

        <!-- Кнопки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnResetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ПРОВЕРИТЬ EMAIL"
                android:textSize="16sp"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnBackToLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="НАЗАД К ВХОДУ"
                android:textSize="16sp"
                android:backgroundTint="#757575"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Информация -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="После сброса пароля вы сможете войти в систему с новым паролем"
            android:textSize="12sp"
            android:textColor="#999999"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:padding="16dp" />

    </LinearLayout>

</ScrollView>