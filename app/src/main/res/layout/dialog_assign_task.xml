<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Выбор работника -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Работник:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/btnSelectWorker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выбрать работника"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvSelectedWorker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Не выбран"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <!-- Выбор операции -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Операция:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/btnSelectOperation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выбрать операцию"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvSelectedOperation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Не выбрана"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <!-- Выбор заказа -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заказ:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/btnSelectOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выбрать заказ"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvSelectedOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Не выбран"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <!-- Количество -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Количество:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите количество"
            android:inputType="number"
            android:maxLines="1" />

    </LinearLayout>

</ScrollView>