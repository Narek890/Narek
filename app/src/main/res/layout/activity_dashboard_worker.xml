<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f8f9fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок пользователя -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Анна Петрова"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tvPosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(Швея)"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Выйти"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Моя смена -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="МОЯ СМЕНА"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvCompletedCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="06:45 Выполнено: 127 шт"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDefectsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Брак: 2 шт"
                        android:textSize="14sp"
                        android:textColor="#F44336" />

                    <TextView
                        android:id="@+id/tvDefectsPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(1.6%)"
                        android:textSize="12sp"
                        android:textColor="#F44336"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Сегодня -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="СЕГОДНЯ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvOperation1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Операция 1    45/50 шт"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvOperation2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Операция 2    30/50 шт"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvOperation3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Операция 3    52/50 шт"
                android:textSize="14sp"
                android:textColor="#4CAF50" />

        </LinearLayout>

        <!-- Быстрые действия -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="БЫСТРЫЕ ДЕЙСТВИЯ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnQuickActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="УЧЕСТЬ ВЫПОЛНЕНИЕ"
                android:textSize="14sp"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnMyStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="МОЯ СТАТИСТИКА"
                android:textSize="14sp"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnTodayTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ЗАДАНИЯ НА СЕГОДНЯ"
                android:textSize="14sp"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>